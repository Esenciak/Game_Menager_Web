@model List<Heroes>
<partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                List Postaci
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="KartaPostaciGracz" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Hero
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Imie postaci
                </th>
                <th>
                    Rasa
                </th>

                <th>
                    @*Tu dla gracza musi być pokaż postać a dla admina edytuj postać
                    Coś w tym stylu
                    *@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id)) // tu chyba potem trzeba zmienić na User
            {
                <tr>
                    <td>@obj.Name</td> @*Tu damy Login gracza*@
                    <td>
                        @obj.Race @*A tu nazwę postaci żeby łatwiej było wyszukiwać*@
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="KartaPostaciGracz" asp-action="KartaPos" asp-route-heroesId="@obj.Id" class="btn btn-Info mx-2">
                                <i class="bi bi-file"></i> Karta
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
